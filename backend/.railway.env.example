# Application
ENVIRONMENT=production
DEBUG=false

# Database (provided by Railway PostgreSQL plugin)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Redis (provided by Railway Redis plugin)  
REDIS_URL=${{Redis.REDIS_URL}}

# Security (generate strong values)
SECRET_KEY=<generate-strong-random-key>
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Services
OPENAI_API_KEY=<your-openai-api-key>
ANTHROPIC_API_KEY=<your-anthropic-api-key>

# CORS (update with your Railway frontend URL)
CORS_ORIGINS=https://your-frontend.railway.app,https://athletepension.com

# Celery (uses Redis)
CELERY_BROKER_URL=${{Redis.REDIS_URL}}
CELERY_RESULT_BACKEND=${{Redis.REDIS_URL}}

# Optional: Monitoring
SENTRY_DSN=<optional-sentry-dsn>